@model Lab5_WebApp.ViewModels.Entities.CarViewModel;
@{
    ViewData["Title"] = "Create";
}

<div class="container text-center w-50">
    <form method="post">
        <h2>Create a new entity</h2>

        <div>
            <input hidden asp-for="PageViewModel.CurrentPage" value="@Model.PageViewModel.CurrentPage" />
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger text-justify w-100 m-lg-0"></div>

        <p>
            <label asp-for="Entity.VINcode"></label><br />
            <input asp-for="Entity.VINcode" class="w-75" />
        <p><span asp-validation-for="Entity.VINcode" class="text-danger"></span></p>

        <p>
            <label asp-for="Entity.RegNum"></label><br />
            <input asp-for="Entity.RegNum" class="w-75" />
        <p><span asp-validation-for="Entity.RegNum" class="text-danger"></span></p>

        <p>
            <label asp-for="Entity.EngineNum"></label><br />
            <input asp-for="Entity.EngineNum" type="number" class="w-75" />
        <p><span asp-validation-for="Entity.EngineNum" class="text-danger"></span></p>

        <p>
            <label asp-for="Entity.Price"></label><br />
            <input asp-for="Entity.Price" type="number" class="w-75" />
        <p><span asp-validation-for="Entity.Price" class="text-danger"></span></p>

        <p>
            <label asp-for="Entity.RentalPrice"></label><br />
            <input asp-for="Entity.RentalPrice" type="number" class="w-75" />
        <p><span asp-validation-for="Entity.RentalPrice" class="text-danger"></span></p>

        <p>
            <label asp-for="Entity.IssueDate"></label><br />
            <input asp-for="Entity.IssueDate" type="date" class="w-75" />
        <p><span asp-validation-for="Entity.IssueDate" class="text-danger"></span></p>

        <p>
            <label asp-for="Entity.Specs"></label><br />
            <input asp-for="Entity.Specs" class="w-75" />
        <p><span asp-validation-for="Entity.Specs" class="text-danger"></span></p>

        <p>
            <label asp-for="Entity.TechnicalMaintenanceDate"></label><br />
            <input asp-for="Entity.TechnicalMaintenanceDate" type="date" class="w-75" />
        <p><span asp-validation-for="Entity.TechnicalMaintenanceDate" class="text-danger"></span></p>

        <p>
            <label asp-for="Entity.SpecMark"></label><br />
            <input asp-for="Entity.SpecMark" type="checkbox" class="w-75" />
        <p><span asp-validation-for="Entity.SpecMark" class="text-danger"></span></p>

        <p>
            <label asp-for="Entity.ReturnMark"></label><br />
            <input asp-for="Entity.ReturnMark" type="checkbox" class="w-75" />
        <p><span asp-validation-for="Entity.ReturnMark" class="text-danger"></span></p>

        <p>
            <label asp-for="Entity.CarModelId"></label><br />
            <input type="search" list="carModels" asp-for="CarModelName" class="w-75" />
            <datalist id="carModels">
                @foreach (var item in Model.SelectList1)
                {
                    <option value="@item.Name"></option>
                }
            </datalist>
        <p><span asp-validation-for="Entity.CarModelId" class="text-danger"></span></p>

        <p>
            <label asp-for="Entity.EmployeeId"></label><br />
            <input type="search" list="employees" asp-for="EmplpoyeeName" class="w-75" />
            <datalist id="employees">
                @foreach (var item in Model.SelectList2)
                {
                    <option value="@item.Name"></option>
                }
            </datalist>
        <p><span asp-validation-for="Entity.EmployeeId" class="text-danger"></span></p>

        <p>
            <input type="submit" value="Add" class="btn btn-success w-75" />

        <p><a asp-action="Index" asp-route-page="@Model.PageViewModel.CurrentPage" class="btn btn-danger w-75">Back</a></p>
    </form>
</div>
