@model Lab5_WebApp.ViewModels.Entities.CarViewModel
@{
    ViewData["Title"] = "Cars";
}

<div class="container w-100">
    <h2 class="text-center">
        <label asp-for="Entities"></label>
    </h2>

    <div class="container">
        <a asp-action="Create" asp-route-sortState="@Model.SortViewModel.CurrentState" asp-route-page="@Model.PageViewModel.CurrentPage" class="btn btn-primary p-2">Add new entity</a>

        <fieldset class="p-2 float-right">
            <form method="post" asp-route-page="@Model.PageViewModel.CurrentPage">
                <label asp-for="CarsFilterViewModel.CarEngineNum"></label>
                <input name="CarEngineNum" value="@Model.CarsFilterViewModel.CarEngineNum" type="number" />

                <label asp-for="CarsFilterViewModel.CarIssueDate"></label>
                <input name="CarIssueDate" value="@Model.CarsFilterViewModel.CarIssueDate" type="date" />

                <label asp-for="CarsFilterViewModel.CarPrice"></label>
                <input name="CarPrice" value="@Model.CarsFilterViewModel.CarPrice" type="number" />

                <label asp-for="CarsFilterViewModel.CarRegNum"></label>
                <input name="CarRegNum" value="@Model.CarsFilterViewModel.CarRegNum" type="number" />

                <label asp-for="CarsFilterViewModel.CarRentalPrice"></label>
                <input name="CarRentalPrice" value="@Model.CarsFilterViewModel.CarRentalPrice"type="number" step="0.0001" />

                <label asp-for="CarsFilterViewModel.CarVINcode"></label>
                <input name="CarVINcode" value="@Model.CarsFilterViewModel.CarVINcode" />

                <input type="submit" value="Filter" class="btn btn-primary" />
            </form>
        </fieldset>
    </div>

    <table class="table table-hover table-sm">
        <thead class="thead-dark text-center text-white">
            <tr>
                <th class="w-25">
                    <a asp-action="Index" asp-route-sortState="@Model.SortViewModel.CarsEngineNum" asp-route-page="@Model.PageViewModel.CurrentPage" class="nav-link text-white">
                        @Html.DisplayNameFor(e => e.Entity.EngineNum)
                    </a>
                </th>
                <th class="w-25">
                    <a asp-action="Index" asp-route-sortState="@Model.SortViewModel.CarsIssueDate" asp-route-page="@Model.PageViewModel.CurrentPage" class="nav-link text-white">
                        @Html.DisplayNameFor(e => e.Entity.IssueDate)
                    </a>
                </th>
                <th class="w-25">
                    <a asp-action="Index" asp-route-sortState="@Model.SortViewModel.CarsPrice" asp-route-page="@Model.PageViewModel.CurrentPage" class="nav-link text-white">
                        @Html.DisplayNameFor(e => e.Entity.Price)
                    </a>
                </th>
                <th class="w-25">
                    <a asp-action="Index" asp-route-sortState="@Model.SortViewModel.CarsRegNum" asp-route-page="@Model.PageViewModel.CurrentPage" class="nav-link text-white">
                        @Html.DisplayNameFor(e => e.Entity.RegNum)
                    </a>
                </th>
                <th class="w-25">
                    <a asp-action="Index" asp-route-sortState="@Model.SortViewModel.CarsRentalPrice" asp-route-page="@Model.PageViewModel.CurrentPage" class="nav-link text-white">
                        @Html.DisplayNameFor(e => e.Entity.RentalPrice)
                    </a>
                </th>
                <th class="w-25">
                    <a asp-action="Index" asp-route-sortState="@Model.SortViewModel.CarsReturnMark" asp-route-page="@Model.PageViewModel.CurrentPage" class="nav-link text-white">
                        @Html.DisplayNameFor(e => e.Entity.ReturnMark)
                    </a>
                </th>
                <th class="w-25">
                    <a asp-action="Index" asp-route-sortState="@Model.SortViewModel.CarsSpecMark" asp-route-page="@Model.PageViewModel.CurrentPage" class="nav-link text-white">
                        @Html.DisplayNameFor(e => e.Entity.SpecMark)
                    </a>
                </th>
                <th class="w-25">
                    <a asp-action="Index" asp-route-sortState="@Model.SortViewModel.CarsVINcode" asp-route-page="@Model.PageViewModel.CurrentPage" class="nav-link text-white">
                        @Html.DisplayNameFor(e => e.Entity.VINcode)
                    </a>
                </th>



                <th class="w-25">
                    <a asp-action="Index" asp-route-sortState="@Model.SortViewModel.CarModelsNameSort'" asp-route-page="@Model.PageViewModel.CurrentPage" class="nav-link text-white">
                        @Html.DisplayNameFor(e => e.Entity.CarModel.Name)
                    </a>
                </th>
                <th class="w-25">
                    <a asp-action="Index" asp-route-sortState="@Model.SortViewModel.EmployeesNameSort'" asp-route-page="@Model.PageViewModel.CurrentPage" class="nav-link text-white">
                        @Html.DisplayNameFor(e => e.Entity.Employee.Name)
                    </a>
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var entity in Model.Entities)
            {
                <tr>
                    <td>@entity.EngineNum</td>
                    <td>@entity.IssueDate</td>
                    <td>@entity.Price</td>
                    <td>@entity.RegNum</td>
                    <td>@entity.RentalPrice</td>
                    <td>@entity.ReturnMark</td>
                    <td>@entity.SpecMark</td>
                    <td>@entity.VINcode</td>
                    <td>@entity.CarModel.Name</td>
                    <td>@entity.Employee.Name</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@entity.CarId" asp-route-sortState="@Model.SortViewModel.CurrentState" asp-route-page="@Model.PageViewModel.CurrentPage" class="btn btn-warning">Details</a>
                        <a asp-action="Edit" asp-route-id="@entity.CarId" asp-route-sortState="@Model.SortViewModel.CurrentState" asp-route-page="@Model.PageViewModel.CurrentPage" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@entity.CarId" asp-route-sortState="@Model.SortViewModel.CurrentState" asp-route-page="@Model.PageViewModel.CurrentPage" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
   
    <div class="container">
        <div class="float-left w-50">
            <form method="get">
                <input type="number" name="page" min="1" max="@Model.PageViewModel.TotalPages" value="@Model.PageViewModel.CurrentPage" class="w-25" />
                <input type="submit" value="Move" class="btn btn-primary" />
            </form>
        </div>
        <div class="text-right float-right">
            @if (Model.PageViewModel.HasPreviousPage)
            {
                <a asp-action="Index" asp-route-sortState="@Model.SortViewModel.CurrentState" asp-route-page="@(Model.PageViewModel.CurrentPage - 1)" class="btn btn-primary">Back</a>
            }
            @if (Model.PageViewModel.HasNextPage)
            {
                <a asp-action="Index" asp-route-sortState="@Model.SortViewModel.CurrentState" asp-route-page="@(Model.PageViewModel.CurrentPage + 1)" class="btn btn-primary">Next</a>
            }
        </div>
    </div>
</div>